body
  .page-cart,
  .page-checkout
    background-color #fff

.page-cart
  .view-commerce-cart-form
    margin-top 2rem
    .view-content
      > a
        background #000
        color #fff
        line-height normal
        border 1px solid #000
        padding 1rem
        transition all .3s
        float right
        margin-bottom 2rem
        font-size 1.8rem
        font-weight 700
        text-transform uppercase
        &:hover
          background #fff
          color #000
      .commerce-line-item-views-form
        form > div
          clearfix()
          table.views-table
            hidescrollbar()
            tbody
              height calc(100vh - 64rem)
              @media (min-width 1280px)
                height calc(100vh - 62rem)
              @media (min-width 1800px)
                height calc(100vh - 60rem)
              overflow-y auto
.page-cart
  .views-field-quantity
    span
      border solid 1px #000
      padding 10px 15px

.page-cart
.page-checkout
  h1
    margin 5.5vh 0 5rem 0
    font-weight 200
    font-size 10rem
  form[id^="commerce-checkout-form-"]
    width 100%
    margin-top 5rem
    > div
      clearfix()
      margin-right -5%
  #commerce-shipping-service-ajax-wrapper
    clearfix()
  #edit-commerce-shipping
    legend
      width 100%
      span.fieldset-legend
        font-size 2.2rem !important
        border-bottom solid 0.2rem #000
        padding 0 0 1rem 0
        margin-bottom 2.5rem !important
  .form-type-radio
    .iradio
      border-color #000
      border-radius 2rem
    &.checked
      .iCheck-helper
        background #000 !important
        opacity 1 !important
        border 0.35rem solid #fff !important
        border-radius 2rem
    label
      width auto
      float none
      display inline-block
      padding-left 1rem
      top 0.35rem
  #commerce-checkout-form-shipping
    #edit-checkout-review, #commerce-shipping-service-ajax-wrapper
      float left
      width 50%
      padding-right 5%
  #commerce-checkout-form-review
    #edit-commerce-payment
      width 95%
      legend
        width 100%

#step-checkout
  list-style none
  width 100%
  padding 0
  margin 0
  left 0
  z-index 2

.border-checkout
  position relative
  display block
  float none
  clear both
  top: -1px
  width 100%
  border-bottom solid 1px #000
  z-index 1

#step-checkout
  li
    padding 15px 35px
    border solid 1px #000
    float left
    text-transform uppercase
    font-size 2.1rem
    background #000
    color: #6d6d6d
    font-weight bold
    margin 0 15px

#step-checkout
  li.active
    background #fff
    color #000
    border-bottom solid 1px #fff

.customer_profile_shipping, #commerce-checkout-coupon-ajax-wrapper, #customer-profile-billing-ajax-wrapper
  float left
  width 50%
  padding-right 5%

.form-item-customer-profile-billing-commerce-customer-profile-copy
  input[type="checkbox"]
    float left
    margin-top 0.38rem !important
  label
    width auto

.page-cart
  table
    &.views-table
      &.cols-5
        tr
          td
            font-size 1.8rem
            padding 1rem 0 0.5rem 0
            line-height 4rem
            vertical-align middle
    td
      &.views-field-field-product-image
        text-align left !important

.imgproduct
  display inline-block
  vertical-align middle
  padding-right 15px
  padding-left 2rem
  img
    width 25px
    height auto

.page-cart-bottom
  clearfix()
  position fixed
  width 100%
  bottom 0
  text-align center
  z-index 9
  a
    display inline-block
    width 30rem

.page-cart
  .nav-map
    .col
      a
        background-color #000
  #menu-open
    color #000

.page-checkout
  #menu-open
    color #000
  span
    &.fieldset-legend
      font-size 18px !important
      font-weight bold
      text-transform uppercase
      margin-bottom 15px !important
      display block

.address-review-container
  float left
  width 100%

.title-address
  font-weight bold
  font-size 2.2rem
  text-transform uppercase
  display block
  border-bottom solid 2px #000
  padding 0 0 10px 0
  margin 0 0 25px 0

.col-address-review
  float left
  width 50%
  text-align left

.subtitle-address
  font-weight bold
  font-size 1.6rem
  display block
  text-transform uppercase

.page-checkout-review
  #commerce-shipping-service-ajax-wrapper,
  #edit-checkout-review
    float left
    width 50%
  #edit-checkout-review
    padding-right 50px

.page-checkout-review
  .checkout-help
    padding 15px 0

.page-checkout-review
  span
    &.fieldset-legend
      font-weight bold
      font-size 2.2rem !important
      text-transform uppercase
      display block
      border-bottom solid 2px #000
      padding 0 0 10px 0
      margin 0

.black-link:hover
.black-link
  color #000 !important
  text-shadow none
  &::after
    filter invert(100%)
