  .mobile-title
    background-image url(../img/product/bg-slide-land-mobile.jpg)
    background-repeat no-repeat
    color #fff
    width 32rem
    height 47.9rem
    width 100%
    background-size cover
    .title
      color inherit
      left 0
      font-size 3.4rem
      text-align center
  #product-filter-boutique
    background-color #fff
    position relative !important
    padding 1.2rem
    float left
    left 0
    width 100%
    .toggle-filter
      color #000
      border 1px solid #000
      line-height 3.3rem
      padding 0.3rem 0.4rem 0.3rem 1.2rem
      &::after
        content ""
        border-left 1rem solid transparent
        border-right 1rem solid transparent
        width 0
        height 0
        display block
        border-top 1rem solid #000
        margin-top 1.2rem
        margin-right 1.2rem
        float right
      &.opened
        &::after
          border-top none
          border-bottom 1rem solid #000
    .filter-select-toggle
      clearfix()
      list-style none
      padding-top 1.2rem
      ul
        clearfix()
        list-style none
        li.item
          background-color #fff
          line-height normal
          padding 0.5rem 0
          width 100%
          a
            color #000
            font-weight normal