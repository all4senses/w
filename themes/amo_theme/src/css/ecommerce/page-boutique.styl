.page-boutique
  .messages
    margin-top 40px
    z-index 99
    ul
      width inherit
      word-wrap break-word
  .wrapper
    max-width none
  .wrapper-content
    margin 0 auto
    @media (min-width 600px)
      margin 0 20rem
    @media (min-width 1800px)
      margin 0 auto
      max-width 1340px !important
  .cart-summary-wrapper
    background-color #fff
    color #000
    left -321px
    padding 0 0 0 40px
    position absolute
    text-align center
    top 0
    z-index 999
    border solid 1px #fff
    .cart-summary-left
      a
        background-color #000
        color: #fff;
        display: block;
        font-size: 1.3rem;
        font-weight: bold;
        margin: 10px auto 0 auto;
        padding: 5px 0 6px;
        text-transform: uppercase;
        width: 100%;
    .cart-summary-right
      img
        display block
  #menu-open
    color: #000
  .cart-summary-right
    float right
  .product-list
    clearfix()
    height 100vh
    .desktop-only
      position absolute
    .title
      color #000
      left -10rem
      margin 0
      line-height 20rem
      font-weight 200
      font-size 90
    .product-list-wrapper
      //position absolute
      //top 0
      //width 100%
      .wrapper
        hidescrollbar()
        padding-top 20.5rem
        height 100vh
      .product-list-content
        clearfix()
        overflow-y auto
        height 100%
        width 100%
        margin 0 auto
        position relative
        .product.teaser
          clearfix()
          float left
          padding 0 2.8rem 5.8rem
          position relative
          text-align center
          width (100% / 2)
          height 50%
          @media (min-width 640px) and (max-width (860px - 1))
            width (100% / 3)
          @media (min-width 860px)
            width (100% / 4)
          @media (min-width 1800px)
            max-width 335px !important
          &.hidden
            display none
          img
            height 100%
          .price-product
            font-size 1.8rem
            display block
          .product-title
            display block
            font-size 1.8rem
            padding 0.5rem 0
          .product-teaser-hover
            background-color #000
            color: white;
            display none
            height 100%
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            margin 0 auto
            opacity 0.8
            padding 2rem 1.8rem
            text-align center
            width 100%
            @media (min-width 1280px)
              width 86%
            .product-title, .price-product
              color #FFF
              a:hover
                color #FFF
                font-weight 600
            .text
              font-size: 1.68rem;
              line-height 1.5
              height 100%
              position absolute
              top 0
              width 100%
              left 0
              padding 8rem 1rem 9rem
              p
                float none
            .add-to-cart-wrapper-list
              position absolute
              left 0
              bottom 0
              padding 0 1.2rem 1rem
              width 100%
          &:hover
            .product-teaser-hover
              display block
    #product-filter-boutique
      position absolute
      display block
      right -10rem
      line-height 6.5rem
      @media (min-width 767px)
        line-height 21.5rem
      z-index 99
      a.toggle-products
        //display inline-block
        color #000
        margin-left 1.2rem
        font-size 1.4rem
        line-height 2.2rem
        vertical-align middle
        font-weight 900
        text-transform uppercase
        span
          position: relative;
          top: -1.5px
          display: inline-block
          vertical-align: middle
          margin-right: .8rem
          width: 2.2rem
          height: 2.2rem
          border: .2rem solid #000
          border-radius: .3rem
          span
            width 1.4rem
            height 1.4rem
            position absolute
            left 50%
            margin-right -50%
            -webkit-transform translate(-50%,-50%)
            -ms-transform translate(-50%,-50%)
            transform translate(-50%,-50%)
            top 50%
            border 0
            border-radius 0
        &.active,
        &:hover
          span span
            background-color #000
  .add-to-cart-wrapper-list
    .add-to-cart-form-wrapper-list
      clearfix()
    .add_to_cart_button_item
      background inherit
      padding-right 0 !important
      padding-left 0 !important
      form
        &.commerce-add-to-cart
          .form-item-quantity
            margin 0.1rem 0.3rem 0 0 !important
            span
              &.commerce-quantity-plusminus-link
                a
                  hide-text()
                  border-radius 0
                  margin 0
                  width 100%
                  height 100%
                  position relative
                  top -0.7rem
                  background-color #000
                  filter invert(100%)
          input[type=text]
            background rgba(0, 0, 0, 0)
            color #FFF
          input[type=submit]
            margin 0
            line-height 3rem
            padding 0 0.6rem
    .item-title
      color #FFF
      line-height 2
  .nav-map
    .col
      a
        background-color #000
        &.active,
        &:hover
          background-color #bd1787

