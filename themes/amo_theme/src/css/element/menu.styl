.menu-spirit
  ul.menu
    list-style none
    padding 0
    absolute top 4.5vh left 55%
  li
    float left
    clear both
    a
      float left
      position relative
      text-transform uppercase
      color #f
      fz 18px 20px
      font-family font-title
  .is-active,
  .is-active-trail
    a::after
      content ''
      absolute left -30 top center
      png-size 'picto/arrow-menu'
