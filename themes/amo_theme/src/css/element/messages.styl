.messages
  {R}
  clear both
  padding 16px
  margin-top 3px
  margin-bottom 20px
  font-size 15px
  display inline-block
  float none
  max-width 500px
  bgc rgba(0,0,0,0.7)
  color #f
  a
    c inherit
    text-decoration underline
  li
    line-height 24px
  &--status
    c #f
    border-color currentColor
  &--warning
    c #f
    border-color currentColor
  &--error
    c #f
    border-color currentColor

  h2
    display none
  .messages__icon svg
    display none