@require '../element/form.styl'

select-height = input-height

select-highlight-color = blue

.select2
  width 100% // use a container to set width if possible
  .select2-selection
    bgc transparent
    height select-height
    border input-border-width input-border-color
    border-radius input-border-radius
    color #f
    {input-padding}
    .select2-selection__placeholder
      // placeholder style (see js/plugin/select.js to set placeholder)
      color inherit
      line-height 47px
    .select2-selection__rendered
      font-size input-font-size 47px
      padding 0
      color inherit
    .select2-selection__arrow
      height select-height
      border-left 10px transparent
      border-right 10px transparent
      border-top 10px #f
      size 0
      margin-top 20px
      margin-right 20px
      // png 'picto/select-down' center center
      .select2-container--open&
        // png 'picto/select-up'
      b
        display none
  .select2-selection__clear
    // clear select (allowClear)
  
  .mobile &
    .select2-selection
      height 41px
      line-height @height - 8
      .select2-selection__placeholder,
      .select2-selection__rendered
        line-height @height - 8
      .select2-selection__arrow
        margin-top 15px
        transform scale(0.7)
        
.select2-container
  .select2-dropdown
    border 0
    border-radius 0
    box-shadow 0 3px 3px rgba(#222, 0.3)
    ul
      width 100%
      max-height 340px !important
      li
        height 30px
        font-family input-font
        font-size input-font-size
        color #0 #f
        &[aria-selected="true"]
          font-weight bold
      .select2-results__option--highlighted
        bgc color-wine
  .select2-results__group
    // optgroup style


