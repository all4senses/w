.page-homepage
  .form
    {R}
    text-align center
    display none
  [id^="amo-enter-page-form"]
    float left
    relative left center
    text-align center
    width 500px
    bgc rgba(0,0,0,0.7)
    padding-top 12px
    .form-item
      margin 0
      label
        margin-top 10px
        width 100%
        text-transform uppercase
        font-weight 600
        letter-spacing 3px
      &.form-item-country .select2
        width 283px
        text-transform uppercase
    .form-submit
      margin-bottom 40px
    .form-radios
      display inline-block
      .form-item-age-validation,
      .form-item-language
        width auto
        margin-right 15px !important
        margin-left 15px !important
        .iradio
          size 130px 50px
          border #f
        .option
          absolute top 3px left
          width 100%
          text-align center
          height 50px
          line-height 50px
          font-weight 400
          margin-top 0
        &.checked
          .iradio
            background-color #f
          .option
            color #0
      .form-item-language
        label
          margin-top 0 !important
          margin-bottom 15px



  .mobile &
    [id^="amo-enter-page-form"]
      width 90%
      padding-top 10
      padding-bottom 10

      .form-item
        label
          margin-top 4px
          text-transform uppercase
          font-size 13px
        &.form-item-country .select2
          width 80%
      .form-submit
        margin-bottom 10px
      .form-radios
        .iradio
          size 86px 41px
          border #f
        .option
          absolute top 3px left
          height 43px
          line-height 43px
        &.checked
          .iradio
            background-color #f
          .option
            color #0
      .form-item-age-validation label
        float left
        clear both
        line-height 1.2
        margin-top 16px
        margin-bottom 10px

