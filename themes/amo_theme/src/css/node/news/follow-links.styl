.social-follow
  absolute bottom 5%
  text-align center
  a
    display inline-block
    padding-top 55px
    margin 0 17
    size 107
    c #f
    background-position center 15
  .fb
    bgc #175786
    png 'picto/fb-white'
    background-position center 18
    &:hover
      bgc darken(#175786, 7)
  .tw
    bgc #1daeec
    png 'picto/tw-white'
    background-position center 18
    &:hover
      bgc darken(#1daeec, 7)
  .in
    bgc #417399
    png 'picto/in-white'
    &:hover
      bgc darken(#417399, 7)
  .yt
    bgc #e41e0c
    png 'picto/yt-white'
    background-position center 14
    &:hover
      bgc darken(#e41e0c, 7)

  .follow
    font-size 12.3px
  .name
    font-size 17.5px
    margin-top 4px
    
  .mobile &
    relative bottom auto
    float left
    bgc #f
    padding-top 20px
    padding-bottom 10px
    a
      margin-bottom 35px