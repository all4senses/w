#products-wrapper
  .slide
    c #f
    > .wrapper
      wrapper 1180
      height 100vh
  .product-wrapper
    relative top center
  .product-content
    width 685px
    .product-title
      fz 50
      color #f
    .product-subtitle
      border-top 2px #f
      color #f
      text-transform uppercase
      margin-top 30px
      padding-top 30px
    .product-body
      float left
      w 500px
      margin-top 30px
	    text-align justify
      p
        fz 20px 25px
    .price
      font-family font-title
      margin-top 80px
      fw 300
      .label
        text-transform uppercase
        fz 30px
      .unit-price
        fz 42px
  .image
    absolute top center right
    width 575px
    text-align center
    img
      display inline-block
      width auto
      height 100vh
      max-height 90vh
      .medium &
        // max-width 50%
      .smaller &
        // max-width 50%
  .actions
    absolute top center right
    border 2px #f
    border-radius 2
    width 92px
    text-align center
    padding 10px
    a
      height 90px
      c #f
      padding 15px 0
      text-transform uppercase
      fz 10px
      fw 500
      padding-top 0
      margin-top 10px
      &:hover
        c inherit
    .technical-sheet
      png 'picto/tech-sheet' top 30px center
  .cursor-hand
    absolute center zi 900
    display none
    png-size 'picto/cursor-slide'
    pointer-events none

  .slide.product-land
    .product-content
      .product-title,
      .product-body,
      .price
        float right
        width 500px
    .image
      left 92 right auto
    .actions
      left right auto
    .product-subtitle
      padding-left 185px



  .mobile #content &
    .slide
      {R}
      height 500
      bgc #f
      margin 0
      &.active
        .product-body
          left 0
      .image
        absolute center
        margin-top -4px
        width auto
        text-align center
        pointer-events none
        img
          display inline-block
          max-height 430px
          width auto
    .product-content
      {R}
      height 520px
      .product-title
        margin 0
        padding 0
        absolute bottom -44 left 50
        size 520px 42px 
        text-align right
        transform-origin top left
        transform rotate(-90deg)
        white-space nowrap
        c #0
        font-size 35px
        font-weight light
    .product-body
      absolute top left -320px z 200
      width 100% 
      min-height 460px 
      c #f #0
      margin 0
      padding 30 30
      text-align left
      font-weight normal
      font-size 14px 18px
      {tr}
      p
        font-weight normal
        font-size inherit inherit
        margin-bottom 0px
    .detail
      absolute top left z 20
      size 45px 440
      c #f #0
      span
        absolute top center left
        text-align center
        margin-left 20
        letter-spacing 3px
        transform-origin top left
        transform rotate(-90deg) translate(-50%,-50%)
        text-transform uppercase
    .price
      absolute top right
      c #0
      width 100px
      .label
        font-size 12px
        font-weight light
      .unit-price
        font-size 25px

    .actions
      absolute top auto bottom 30 right 20 left auto
      border 2px #0
      width 56px
      padding 6px
      a
        height 70px
        c #0
        padding 5px 0
        fz 8px
        margin-top 4px
        letter-spacing -0.2px 
        fw 400
      .technical-sheet
        png 'picto/tech-sheet-mobile' top 30px center
